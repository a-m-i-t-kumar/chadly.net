{{> header}}

<article class="post">
	{{#with page}}
	<header>
		<h2>{{title}}</h2>
		<time datetime="{{date format='YYYY-MM-DD'}}">
			<i class="fa fa-calendar"></i>
			{{date format='MMMM DD, YYYY'}}
		</time>
	</header>

	<section class="post-content">
		{{{html}}}
	</section>
	{{/with}}

	<footer>
		{{#author contents page.metadata.author}}
		<section class="author">
			<h4>{{metadata.name}}</h4>
			<p>{{{html}}}</p>
		</section>
		{{/author}}

		<section class="share">
			<h4>Share this post</h4>
			<a class="icon fa fa-twitter" href="http://twitter.com/share?text={{page.title}}&url={{url}}{{page.url}}" title="Twitter" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"></a>
			<a class="icon fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url}}{{page.url}}" title="Facebook" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"></a>
			<a class="icon fa fa-google-plus" href="https://plus.google.com/share?url={{url}}{{page.url}}" title="Google+" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"></a>
			<a class="icon" href="http://news.ycombinator.com/submitlink?u={{url}}{{page.url}}&t={{page.title}}" title="Hacker News" onclick="window.open(this.href, 'google-plus-share', 'width=580,height=530');return false;">Y</a>
		</section>
	</footer>

	{{#if disqus}}
	<div id="disqus_thread" class="post-comments"></div>
	<script type="text/javascript">
		var disqus_shortname = '{{disqus}}';
		        var disqus_title = '{{page.title}}';
		
		        {{#if page.metadata.disqus.identifier}}
		        var disqus_identifier = '{{page.metadata.disqus.identifier}}';
				{{else}}
					{{#if page.metadata.disqus.url}}
					var disqus_url = '{{page.metadata.disqus.url}}';
					{{else}}
					var disqus_identifier = '{{page.metadata.id}}';
					{{/if}}
		        {{/if}}
		
		        (function() {
		            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
		            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
		            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
		        })();
	</script>
	<noscript>Please enable JavaScript to view the
		<a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
	</noscript>
	<a href="http://disqus.com" class="dsq-brlink">comments powered by
		<span class="logo-disqus">Disqus</span>
	</a>
	{{/if}}
</article>

{{> footer}}